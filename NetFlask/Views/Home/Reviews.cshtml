@model NetFlask.Models.ReviewViewModel
@{
   
    ViewBag.Title = "Reviews";
     
}
@section BiblioScripts
{
    @Scripts.Render("~/bundles/JqueryFlexiSel")
}

<div class="review-content">
    <div class="top-header span_top">
        <div class="logo">
            <a href="index.html"><img src="/images/logo.png" alt="" /></a>
            <p>Movie Theater</p>
        </div>
        <div class="search v-search">
            <form>
                <input type="text" value="Search.." onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search..';}" />
                <input type="submit" value="">
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="reviews-section">
        <h3 class="head">Movie Reviews</h3>
        <div class="col-md-9 reviews-grids">
            <div class="jumbotron">

                @using (Html.BeginForm("Reviews","Home", FormMethod.Get))
                {
                    <p>
                        Filter By :@Html.ActionLink("Movie Title", "Reviews", new { sortOrder = ViewBag.NameSortParm }) @Html.ActionLink("Release Date", "Reviews", new { sortOrder = ViewBag.DateSortParm })
<br />
                        Find Movie: @Html.TextBox("SearchString")
                        <input type="submit" value="Search" />
                    </p>
                }
            </div>

            @{
                Html.RenderPartial("~/Views/Shared/_paginate.cshtml", new ViewDataDictionary { { "MaxPage", Model.MaxPage } });
            }


            @foreach (NetFlask.Models.ReviewModel item in Model.Reviews)
            {
                Html.RenderPartial("~/Views/Shared/_ReviewCard.cshtml", item);
            }
            @{
                Html.RenderPartial("~/Views/Shared/_paginate.cshtml", new ViewDataDictionary { { "MaxPage", Model.MaxPage } });
            }

        </div>
        <div class="col-md-3 side-bar">
            <div class="featured">
                <h3>Featured Today in Movie Reviews</h3>
                <ul>
                    @foreach (NetFlask.Models.FeaturedCardModel item in Model.FeaturedToday)
                    {
                        Html.RenderPartial("~/Views/Shared/_FeturedCard.cshtml", item);
                    } 
                    <div class="clearfix"></div>
                </ul>
            </div>

            <div class="entertainment">
                <h3>Featured Today in Entertainment</h3>
                @foreach (NetFlask.Models.FeaturedCardModel item in Model.FeaturedEntertainement)
                {
                    Html.RenderPartial("~/Views/Shared/_FeturedCard.cshtml", item);
                } 
            </div>
            <div class="might">
                <h4>You might also like</h4>
                @foreach (NetFlask.Models.FeaturedCardModel item in Model.AlsoLike)
                {

                    Html.RenderPartial("~/Views/Shared/_FeturedCard.cshtml",item, new ViewDataDictionary { { "Type", "AlsoLike" } });

                }

               
            </div>
